<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Accueil">

    <Button
        android:id="@+id/nouvel"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Nouvel Article"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="135dp"
        android:drawableTop="@drawable/ic_add_circle_ruther"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:background="@drawable/design_nouvel"
        android:layout_marginRight="50dp"/>
    <Button
        android:id="@+id/liste"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Articles"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="135dp"
        android:drawableTop="@drawable/ic_list_black_24dp"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:background="@drawable/articles" />
    <Button
        android:id="@+id/rechercher"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Rechercher"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="350dp"
        android:drawableTop="@drawable/ic_search_black_24dp"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:background="@drawable/rechercher"
        android:layout_marginRight="50dp"/>
</RelativeLayout>