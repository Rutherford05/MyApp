<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="#bdc3c7"
    tools:context=".MainActivity">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom"
        android:textColorHint="@color/macouleur"
        app:hintTextAppearance="@color/macouleur"
        app:boxStrokeColor="@color/macouleur"
        android:layout_marginTop="50dp"
        app:boxBackgroundColor="@color/fonds"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textAppearance="@color/macouleur"
            android:textColorHint="@color/macouleur"
            android:textSize="16dp"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prenom"
        android:layout_marginTop="125dp"
        app:hintTextAppearance="@color/macouleur"
        app:boxStrokeColor="@color/macouleur"
        android:textColorHint="@color/macouleur"
        app:boxBackgroundColor="@color/fonds"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textColorHint="@color/macouleur"
            android:textAppearance="@color/macouleur"
            android:textSize="16dp"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom d'utilisateur"
        android:layout_marginTop="200dp"
        android:textColorHint="@color/macouleur"
        app:hintTextAppearance="@color/macouleur"
        app:boxStrokeColor="@color/macouleur"
        app:boxBackgroundColor="@color/fonds"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textColorHint="@color/macouleur"
            android:textAppearance="@color/macouleur"
            android:textSize="16dp"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mot de passe"
        android:layout_marginTop="275dp"
        android:textColorHint="@color/macouleur"
        app:hintTextAppearance="@color/macouleur"
        app:boxStrokeColor="@color/macouleur"
        app:boxBackgroundColor="@color/fonds"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textColorHint="@color/macouleur"
            android:textAppearance="@color/macouleur"
            android:textSize="16dp"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirmer le mot de passe"
        android:textColorHint="@color/macouleur"
        app:hintTextAppearance="@color/macouleur"
        app:boxStrokeColor="@color/macouleur"
        android:layout_marginTop="350dp"
        app:boxBackgroundColor="@color/fonds"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textAppearance="@color/macouleur"
            android:textColorHint="@color/macouleur"
            android:textSize="16dp"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginTop="425dp"
        android:background="@drawable/naomie"
        android:textSize="15dp"
        android:text="S'inscrire" />
</RelativeLayout>
